<?xml version="1.0" encoding="utf-8"?>
<Profile Name="ICMP (safe)" AppSpecific="true">
  <Rules>
    <RuleDef Name="ICMPv4 (echo-req) out">
      <Action>Allow</Action>
      <Protocol>ICMPv4</Protocol>
      <Direction>Out</Direction>
      <IcmpTypesAndCodes>8:0</IcmpTypesAndCodes>
    </RuleDef>
    <RuleDef Name="ICMPv6 (echo-req) out">
      <Action>Allow</Action>
      <Protocol>ICMPv6</Protocol>
      <Direction>Out</Direction>
      <IcmpTypesAndCodes>128:0</IcmpTypesAndCodes>
    </RuleDef>
    <RuleDef Name="ICMPv4 (safe)">
      <Action>Allow</Action>
      <Protocol>ICMPv4</Protocol>
      <Direction>In</Direction>
      <RemoteAddresses>Defaultgateway</RemoteAddresses>
      <IcmpTypesAndCodes>3:*,11:*</IcmpTypesAndCodes>
    </RuleDef>
    <RuleDef Name="ICMPv6 (safe)">
      <Action>Allow</Action>
      <Protocol>ICMPv6</Protocol>
      <Direction>In</Direction>
      <IcmpTypesAndCodes>129:0,1:*,3:*,2:0</IcmpTypesAndCodes>
    </RuleDef>
  </Rules>
</Profile>