<?xml version="1.0" encoding="utf-8"?>
<Profile Name="UPnP">
  <!-- NOTE: To use UPnP, additionally enable the SSDP profile too! -->
  <Rules>
    <RuleDef Name="UPnP Server">
      <Action>Allow</Action>
      <Protocol>TCP</Protocol>
      <Direction>In</Direction>
      <LocalPorts>2869</LocalPorts>
      <RemoteAddresses>LocalSubnet</RemoteAddresses>
    </RuleDef>
    <RuleDef Name="UPnP Client">
      <Action>Allow</Action>
      <Protocol>TCP</Protocol>
      <Direction>Out</Direction>
      <RemotePorts>2869</RemotePorts>
      <RemoteAddresses>LocalSubnet</RemoteAddresses>
    </RuleDef>
  </Rules>
</Profile>