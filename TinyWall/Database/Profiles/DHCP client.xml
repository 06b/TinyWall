      <Direction>InOut</Direction>
      <LocalPorts>546</LocalPorts>
      <RemotePorts>547</RemotePorts>
      <RemoteAddresses>LocalSubnet</RemoteAddresses>
    </RuleDef>
  </Rules>
</Profile>