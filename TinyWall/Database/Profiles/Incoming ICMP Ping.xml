<?xml version="1.0" encoding="utf-8"?>
<Profile Name="Incoming ICMP Ping" AppSpecific="true">
  <Rules>
    <RuleDef Name="ICMPv4 (echo-req) in">
      <Action>Allow</Action>
      <Protocol>ICMPv4</Protocol>
      <Direction>In</Direction>
      <IcmpTypesAndCodes>8:0</IcmpTypesAndCodes>
    </RuleDef>
    <RuleDef Name="ICMPv6 (echo-req) in">
      <Action>Allow</Action>
      <Protocol>ICMPv6</Protocol>
      <Direction>In</Direction>
      <IcmpTypesAndCodes>128:0</IcmpTypesAndCodes>
    </RuleDef>
  </Rules>
</Profile>